@model StudentPortal.ViewModels.ManageUserClaimsViewModel
@{
    ViewData["Title"] = "Manage User Claims";
}

<h2>Manage User Claims</h2>
<p><strong>User:</strong> @Model.Email</p>

<form asp-action="ManageClaims" method="post">
    <input type="hidden" asp-for="UserId" />

    @for (int i = 0; i < Model.Claims.Count; i++)
    {
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="Claims[i].IsSelected" />
            <input type="hidden" asp-for="Claims[i].ClaimType" />
            <label class="form-check-label">@Model.Claims[i].ClaimType</label>
        </div>
    }

    <br />
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancel</a>
</form>
